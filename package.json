{
  "name": "electron-release",
  "version": "1.0.2",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@testing-library/user-event": "^13.5.0",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.4.6",
    "electron-progressbar": "^2.0.1",
    "electron-store": "^8.0.1",
    "electron-updater": "^4.6.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1",
    "react-scripts": "5.0.0",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron": "^17.1.0",
    "electron-builder": "^22.14.13",
    "electron-winstaller": "^5.0.0",
    "wait-on": "^6.0.1"
  },
  "scripts": {
    "react:start": "react-scripts start",
    "react:build": "react-scripts build",
    "start": "concurrently \"cross-env NODE_ENV=development BROWSER=none npm run react:start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "npm run react:build && electron-builder",
    "release": "npm run react:build && electron-builder build --publish=always",
    "deploy": "npm run react:build && firebase deploy"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HyeBinYang/electron-release-practice.git"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.applyhead.pingo",
    "productName": "Pingo",
    "copyright": "Copyright Â© year Sandeep Acharya",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/favicon.ico",
      "signingHashAlgorithms": ["sha256"],
      "publisherName": "YMYD Corp.",
      "signAndEditExecutable": true
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "build/favicon.ico",
      "uninstallerIcon": "build/favicon.ico",
      "installerSidebar": "build/sidebar.bmp",
      "uninstallerSidebar": "build/sidebar.bmp"
    },
    "publish": [
      {
        "provider": "github",
        "private": true,
        "owner": "HyeBinYang",
        "repo": "electron-release-practice",
        "token": "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"
      }
    ]
  }
}